<h1><%= @product.name %></h1>

<%= link_to("Edit This Product", edit_product_path) %>
<br><br>
Price: <%= @product.formatted_price %>
<br><br>
Description:<br>
<%= @product.description %>

<h3>Reviews</h3>

<%= render 'reviews/show' %>

<% if current_user %>
	<h4>New Review</h4>

	<%= render 'reviews/form' %>

<% else %>
	<p>Please <%= link_to("log in", new_session_path) %> to add a review</p>
<% end %>